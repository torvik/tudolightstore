<%- model_class = Product -%>
  <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Tudo Light  <small> <%=t '.title', :default => 'Lista de Produtos' %>  </small>
                        </h1>
                        <ol class="breadcrumb">
                            <li class="active">
                                <i class="fa fa-tasks"></i> Todos os produtos
                            </li>
                        </ol>
                    </div>
                </div>
                <!-- /.row -->


<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:nome) %></th>
      <th><%= model_class.human_attribute_name(:numero) %></th>
      <th><%= model_class.human_attribute_name(:preÃ§o) %></th>
      <th><%= model_class.human_attribute_name(:tamanho) %></th>
      <th><%= model_class.human_attribute_name(:ativo) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product_path(product)  %></td>
        <td><%= product.number %></td>
        <td><%= product.price %></td>
        <td><%= product.size %></td>
        <td><%if product.active == true %>
            <%= 'Ativo' %>
            <% else %>
            <%= 'Inativo' %>
            <% end %>
        </td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_product_path(product), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_product_path,
            :class => 'btn btn-primary' %>
